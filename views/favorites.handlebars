<section>
    {{#if chords.length}}
    <div class="columns is-mobile ml-4 mt-6">
            <div class="save-title column is-one-quarter">
                <h1 class="is-size-4 hidden-mobile center">Progression Name</h1>
            </div>
            <div class="save-chords column is-half">
                <h2 class="is-size-4 hidden-mobile center">Chord Progression</h2>
            </div>
    </div>
    {{#each chords as |chord|}}
    <div class="columns ml-4 mt-1">
            <div class="save-title column ml-4 is-one-quarter">
                <h2 class="is-size-5 has-text-weight-semibold has-text-success center">{{chord.progression_name}}</h1>
            </div>
            <div class="save-chords column is-half">
                <h3 class="has-text-weight-semibold is-size-5 center">{{chord.chords}}</h3>
            </div>
            <div class="edit-favorites column is-one-quarter">
                <div class="is-flex">
                    <a id="progression-edit" class="no-link" href="/edit/{{chord.id}}">Edit</a>
                    <a id="{{chord.id}}" class="progression-delete no-link">Delete</a>
                </div>
            </div>

    </div>
   {{/each}}
   {{else}}
   <div class="has-text-success is-size-4">No Progressions Saved</div>
   {{/if}}
</section>
<script src="/javascript/delete.js"></script>


