<section class="login">
    <div class="columns is-centered">
        <div class="column is-6">
            <div id="error-div" class="mt-6 has-text-success"></div>
            <form class="box login-form">
                <div class="field">
                    <label class="label">Email</label>
                    <div class="control">
                        <input id="email-login" class="input" type="email" placeholder="e.g. example@example.com">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Password</label>
                    <div class="control">
                        <input id="password-login" class="input" type="password" placeholder="********">
                    </div>
                </div>

                <button class="button is-dark">Login</button>
            </form>
            <div>
                <div class="center">
                    or <a class="has-text-success" href="/signup">signup</a>
                </div>
            </div>
        </div>
    </div>
</section>

 {{!-- popup to save title --}}
  <div class="modal">
  <div class="modal-background"></div>
  <div id='error-popup' class="modal-content">
      <div class="has-text-success is-dark">Incorrect Email or Password</div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

<script src="../javascript/login.js"></script>